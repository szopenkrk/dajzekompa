{
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": ".",
        "outDir": "build",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "sourceMap": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "paths": {
            "server/*": [ "./src/server/*" ],
            "client/*": [ "./src/client/*" ]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "src/**/*.spec.*"
    ]
}